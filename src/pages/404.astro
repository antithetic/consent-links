---
import { SITE } from "@config";
import Layout from "@layouts/LinksLayout.astro";
import Header from "@components/LinksHeader.astro";
import Footer from "@components/LinksFooter.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main id="main-content">
    <div class="not-found-wrapper">
      <h1 aria-label="404 Not Found">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p>Page Not Found</p>
      <a
        href="/"
        class="my-6 text-lg underline decoration-dashed underline-offset-8"
      >
        Go back home
      </a>
    </div>
  </main>

  <Footer />
</Layout>
