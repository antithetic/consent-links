---
import { SITE } from "@config";
import Layout from "@layouts/LinksLayout.astro";
import Header from "@components/LinksHeader.astro";
import Footer from "@components/LinksFooter.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main class="container flex flex-col max-w-md mx-auto mt-5 pt-10">
    <div class="not-found">
      <h1 aria-label="404 Not Found">404</h1>
      <span aria-hidden="true">(-_-)ゞ゛</span>
      <p>Page Not Found</p>
      <a href="/"> Go back home </a>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  body {
    background-color: #a6f257;
  }
  .not-found {
    @apply text-center mb-10;
  }
  .not-found h1 {
    @apply text-8xl font-extrabold mb-5;
  }
  .not-found span {
    @apply font-light text-2xl;
  }
  .not-found p {
    @apply text-6xl my-5;
  }
  .not-found a {
    @apply my-6 text-lg underline decoration-dashed underline-offset-2;
  }
</style>
